<% if @user.errors.any? %>
<h2>
  The Following errors prevented the todo from being saved
</h2>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %> </li>
  <% end %>
</ul>
<% end %>
<%= form_for @user do |f| %>
<p>
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :email %> <br>
  <%= f.text_field :email %>
</p>

<p>
  <%= f.submit class: "btn btn-danger btn-lg btn-xlarge" %>
</p>

<% end %>

<% link_to "Back to todos listing", todos_path %>