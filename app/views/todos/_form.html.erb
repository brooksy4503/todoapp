<%= render 'shared/errors', obj: @todo %>
<%= form_for @todo do |f| %>
<p>
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :description %> <br>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.submit class: "btn btn-danger btn-lg btn-xlarge" %>
</p>

<% end %>

