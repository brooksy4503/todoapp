<% obj.each do |todo| %>
<div class="row">
    <div class="col-md-12 well">
    <h4><%= link_to todo.name, todo_path(todo) %></h4>
    <p><%= truncate(todo.description,length: 150) %></p>
    <p>
      <span class="quiet"><small>Created <%= time_ago_in_words(todo.created_at)%> ago</small></span>
    </p>
    <% if logged_in? && (current_user == todo.user || current_user.admin?)%>
    <div class='todo-actions'>
    <%= link_to "Edit this todo", edit_todo_path(todo), class: "btn btn-xs btn-warning" %>
    <%= link_to "Delete this todo", todo_path(todo), 
                                      method: :delete, data: { confirm: "Are you sure you want to delete this todo?" }, 
                                      class: "btn btn-xs btn-danger" %>
    </div>
    <% end %>
    
  </div>
</div>
<% end %>