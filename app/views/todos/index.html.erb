<div class="jumbotron center">
    <h1>Listing all Todos</h1>
    <p>
    <%= link_to "Create a Todo", new_todo_path, class: "btn btn-danger btn-lg btn-xlarge" %>
    </p>
    <div align="center">
    <%= will_paginate %>
    </div>
    <table class="table">
    <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
    </tr>
    <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.name %></td>
      <td><%= todo.description %></td>
      <% if logged_in? && (current_user == todo.user || current_user.admin?)%>
      <%# if logged_in? && current_user.admin?  && !user.admin? %>
      <td><%= link_to "Edit", edit_todo_path(todo) %></td>
      <td><%= link_to "Show", todo_path(todo) %></td>
      <td><%= link_to "Delete", todo_path(todo), method: :delete, data: {confirm: "Are you sure?"} %> </td>
      <% end %>
    </tr>
    <% end %>
  </table>
      <div align="center">
    <%= will_paginate %>
    </div>
</div>

